<!-- Main -->
<div id="main">
	<div class="shell">
		
		<!-- Search, etc -->
		<div class="options">
                    <div class="left">
                        <ul id="category">
                            {% for aux in categories %}
                                {% if aux.name==category %}
                                    <li><a class="active" href="{{ path('entrada_index', { 'category': (aux.name|lower) }) }}">{{aux.name|title}}</a></li>
                                {% else %}
                                    <li><a href="{{ path('entrada_index', { 'category': (aux.name|lower) }) }}">{{aux.name|title}}</a></li>
                                {% endif %}    
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="right">
                        <span class="cart">
                            <a class="cart-ico">&nbsp;</a>
                            <strong id="precio"></strong>
                        </span>
                        <span class="left more-links">
                            <a href="{{path ('entrada_checkout')}}">Comprar</a>
                            <a id="detalles">Detalles</a>
                        </span>
                    </div>
		</div>
                <div class="carts">
                    {% include 'JetShopBundle:Cart:cart.html.twig' with {'cart': cart, 'products': products, 'category': category.getName} %}
                </div>
		
		<!-- End Search, etc -->
		
		<!-- Content -->
		<div id="content">
			
			<!-- Tabs -->
			<div class="tabs">
				<ul>
                                    {% for aux in subcategories %}
                                        {% if loop.first %}
                                            <li><a href="#" class="active"><span>{{ aux.name }}</span></a></li>
                                        {% else %}    
                                            <li><a href="#"><span>{{ aux.name }}</span></a></li>
                                        {% endif %}
                                    {% endfor %}
				</ul>
			</div>
			<!-- Tabs -->
			
			<!-- Container -->
			<div id="container">
				
                                <!-- Tabbed -->
				<div class="tabbed">
					
					<!-- Tabs Content -->
                                        {% for aux in subcategories %}
                                            {% if loop.first %}
                                                <div class="tab-content" style="display:block;" id="slider{{ aux.id }}">
                                            {% else %}
                                                <div class="tab-content" id="slider{{ aux.id }}">
                                            {% endif %}
                                            {% set i=0 %}
                                                    <ul>
                                            {% for auxproduct in product %}
                                                {% if auxproduct.subcategory == aux.name %}
                                                    {% if (i%20)==0 %}
                                                            <li id="slider{{ aux.id }}-{{((i-(i%20))/20)+1}}" class="{% if i==0 %}activo{% else %}noactivo{% endif %}">    
                                                            <div class="items">
                                                                <div class="cl">&nbsp;</div>
                                                                <ul class="gallery clearfix">
                                                    {% endif%}
                                                                    <li>
                                                                        <div class="image">
                                                                            <a href="{{asset(auxproduct.getWebPath)}}" rel="prettyPhoto[{{aux.name}}]"><img src="{{asset(auxproduct.getWebPath)}}" height="83" width="126" alt="" /></a>
                                                                        </div>
                                                                        <p>
                                                                            Num. Referencia: <span>{{auxproduct.getItemNumber}}</span><br />
                                                                            Lista Tallas : <span>
                                                                            <select class="tallas" name="tallas" id="talla_{{auxproduct.getId}}">
                                                                            	<option value="0">Selecciona talla</option>
                                                                            {% for size in auxproduct.getSizeList() %}
																				<option value="{{ size }}">{{ size }}</option>
                                                                            {% endfor %}
                                                                            </select>
                                                                            </span><br />
                                                                            Nombre Producto: <a href="#">{{auxproduct.getName}}</a>
                                                                        </p>
                                                                        <p class="price">Precio: <strong>{{auxproduct.getPrice}} €</strong></p>
                                                                        <div class="anadir">
                                                                        	<a id="{{ auxproduct.getId }}" rel="{{path('entrada_index', { 'category': category.getName })}}">añadir</a>
                                                                        </div>
                                                                        	
                                                                    </li>
                                                                      
                                                    {% if (((i+1)%20)==0) and (i!=0) %}
                                                                </ul>
                                                                <div class="cl">&nbsp;</div>
                                                            </div>
                                                        </li>
                                                    {% endif %}
                                                    
                                                    {% set i=i+1 %}
                                                {% endif %}
                                            {% endfor %}
                                            {% if (i+1)%20!=0 %}
                                                                </ul>
                                                                <div class="cl">&nbsp;</div>
                                                            </div>
                                                        </li>
                                            {% endif %}
                                                    </ul>
                                                    {% if ((i-(i%20))/20)>1 %}
                                                        <ol class="pager">
                                                            {% for j in 0..((i-(i%20))/20) %}
                                                            <li>
                                                                <a {% if j==0%}style="background-color:#FFF;"{% endif %} rel="{{ j+1 }}">{{ j+1 }}</a>
                                                            </li>
                                                            {% endfor %}
                                                        </ol>
                                                    {% endif %}
                                                </div>
                                        {% endfor %}
