<h1>Product list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Size_list</th>
            <th>Comment</th>
            <th>Item_number</th>
            <th></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('auto_product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.sizelist }}</td>
            <td>{{ entity.comment }}</td>
            <td>{{ entity.itemnumber }}</td>
            <td><img src="{{ asset(entity.getWebPath) }}" alt="some_text"/></td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('auto_product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('auto_product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('auto_product_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
